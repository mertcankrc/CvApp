@model CVApp.Web.Models.AppUserCreateModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="mt-4">Kullanıcı Oluştur</h1>
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Ad:</label><span asp-validation-for="@Model.UserName"></span>
        <input asp-for="@Model.UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ad:</label><span asp-validation-for="@Model.FirstName"></span>
        <input asp-for="@Model.FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Soyad:</label><span asp-validation-for="@Model.LastName"></span>
        <input asp-for="@Model.LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Telefon:</label><span asp-validation-for="@Model.PhoneNumber"></span>
        <input asp-for="@Model.PhoneNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label>Mail:</label><span asp-validation-for="@Model.Email"></span>
        <input asp-for="@Model.Email" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ön Bilgi:</label><span asp-validation-for="@Model.ShortDescription"></span>
        <input asp-for="@Model.ShortDescription" class="form-control" />
    </div>
    <div class="form-group">
        <label>Adres:</label><span asp-validation-for="@Model.Address"></span>
        <input asp-for="@Model.Address" class="form-control" />
    </div>
    <div class="form-check">
        <input type="radio" asp-for="Language" class="form-check-input" value="tr-TR" />
        <label class="form-check-label">
            Türkçe
        </label>
    </div>
    <div class="form-check">

        <input type="radio" asp-for="Language" class="form-check-input" value="en-US" />

        <label class="form-check-label">
            İngilizce
        </label>
    </div>
    <div class="form-group row">
        <div class="col-md-6">

            <div class="alert alert-light text-center">
                Sistemde herhangi bir fotoğraf kayıtlı değil
            </div>
        </div>
        <div class="col-md-6">
            <label>Resim Seçiniz</label>
            <input type="file" asp-for="@Model.Pic" class="form-control-file" />
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Kaydet</button>
    </div>
</form>