@model CVApp.DTO.DTO.SkillDTO.SkillAddDTO

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="mt-4">Yeni Yetenek Ekle</h1>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Yetenek</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-check">
                <input type="radio" asp-for="Language" class="form-check-input" value="tr-TR" />
                <label class="form-check-label">
                    Türkçe
                </label>
            </div>
            <div class="form-check">
                <input type="radio" asp-for="Language" class="form-check-input" value="en-US" />
                <label class="form-check-label">
                    İngilizce
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

