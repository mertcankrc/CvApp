@model CVApp.DTO.DTO.SocialMediaDTO.SocialMediaUpdateDTO

@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="mt-4">Sosyal Medya Güncelle</h1>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Update">
            <input asp-for="@Model.Id" hidden />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Icon</label>
                <input asp-for="@Model.Icon" class="form-control" />
                <span asp-validation-for="@Model.Icon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Link</label>
                <input asp-for="@Model.Link" class="form-control" />
                <span asp-validation-for="@Model.Link" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
