@model CVApp.DTO.DTO.CertificationDTO.CertificationUpdateDTO

@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="mt-4">Sertifika Güncelle</h1>

<form asp-action="Update">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label class="control-label">Sertifika Açıklaması</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-check">
        @if (Model.Language == "tr-TR")
        {
            <input type="radio" asp-for="Language" class="form-check-input" value="tr-TR" checked />
        }
        else
        {
            <input type="radio" asp-for="Language" class="form-check-input" value="tr-TR" />
        }
        <label class="form-check-label">
            Türkçe
        </label>
    </div>
    <div class="form-check">
        @if (Model.Language == "en-US")
        {
            <input type="radio" asp-for="Language" class="form-check-input" value="en-US" checked />
        }
        else
        {
            <input type="radio" asp-for="Language" class="form-check-input" value="en-US" />

        }
        <label class="form-check-label">
            İngilizce
        </label>
    </div>
    <div class="form-group">
        <input type="submit" value="Kaydet" class="btn btn-success" />
    </div>
</form>
