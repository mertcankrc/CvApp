@model CVApp.DTO.DTO.CertificationDTO.CertificationAddDTO

@{
    ViewData["Title"] = "Sertifika Oluştur";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";}



<h1 class="mt-4">Yeni Sertifika</h1>

<form asp-action="CreateCertificate" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label class="control-label">Sertifika Açıklaması</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-check">
        <input type="radio" asp-for="Language" class="form-check-input" value="tr-TR" />
        <label class="form-check-label">
            Türkçe
        </label>
    </div>
    <div class="form-check">
        <input type="radio" asp-for="Language" class="form-check-input" value="en-US" />
        <label class="form-check-label">
            İngilizce
        </label>
    </div>
    <div class="form-group">
        <input type="submit" value="Kaydet" class="btn btn-success" />
    </div>
</form>